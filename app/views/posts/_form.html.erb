<h1>New Post</h1>
<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <h2>Category</h2>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |cat_field| %>
    <br>
    <%= cat_field.label :name %>
    <%= cat_field.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
